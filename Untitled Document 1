#include<stdio.h>


 void main(){

    printf("Design Pattern \n \n");

    int i=1;
   //int x=1;
   
 
     while(i<=4){
       
       char ch='A'; 
       int j=5;
 
        while(j>=i){

           printf("%c ",ch);

       // x++;
       
          ch++; 

          j--;

    	   }
      
       printf("\n");
 
   	 i++;
 
       }
}


